<!DOCTYPE Html>
<html lang="en">
    <head>
        <% include ./title.ejs %>
        <meta name="viewport" content="width=device-width">
        <% include ../public/js/scripts.html %>
        <% include ./scripts_for_scrolling_and_nav.ejs %>
    </head>

    <body class="start-scrolling" >
        <div id="wrapper" class="container-fluid">
        
        <% include ./navigation.ejs %>

         <div id="page_title" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <h1>My Favorite Stuff</h1>
                </div>

            <div id="favorite" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div id="favorite_contents" >
                    
                    <% for(var i = 0 ; i < posts.length ; i++) { %>
                       
                            <h2 id="post_title"> <%= posts[i].title %> </h2>
                            <div id="bar">
                            </div>
                            <br/>
                            <p id="date">Posted: <%= posts[i].updated %> </p>

                            <br/>

                            <% for (var j= 0 ; j < posts[i].images.length ; j ++) { %>
                                    <% if (posts[i].images[j] == null || posts[i].images[j] == undefined) { %>
                                        <% continue } else { %>
                                            <% var url = 'http://res.cloudinary.com/slacking-food-blog/image/upload/' +   posts[i].images[j] + '.jpg' %> 
                                            <img src=<%= url %>></img>
                                            <br/>
                                            <% } %>
                                            <% } %>
                            <br/>
                            <p id="contents"> <%- posts[i].content %> </p>

                            <div id="bar2">
                            </div>
                            <br/>
                            <br/>
                    <% } %>
                
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <a href="http://slackingfoodblog.herokuapp.com/my_favorite_stuff/1">PREVIOUS</a>
                    </div>
                    <% if(posts.length == 8) { %>
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                            <a href="http://slackingfoodblog.herokuapp.com/my_favorite_stuff/3">NEXT</a>
                        </div>
                    <% } %>
                
                </div>
                </div>

        <% include ./footer.ejs %>
        </div>
    </body>
</html>
