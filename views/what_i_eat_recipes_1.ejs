<!DOCTYPE Html>
<html lang="en">
    <head>
        <title>Slacking Food Blog</title>
        <meta name="viewport" content="width=device-width">
        <% include ../public/js/scripts.html %>
         <script>

            $(document).ready(function(){

            
               $('nav').hide();
               $('nav').fadeIn(2000);

                   
            });

        </script>

    </head>

    <body>

        <div id="wrapper" class="container-fluid">
       

       
        <% include ./navigation.ejs %>

               <div id="page_title" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <h1>What 'I' Eat! Recipes for 'You'!</h1>
                </div>

            
            <div id="recipes" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div id="recipes_contents" >
                    
                    <% for(var i = 0; i < posts.length; i++) { %>
                        <div id=<%= posts[i]._id %> > 
                            <h2 id="post_title"> <%= posts[i].title %> </h2>
                            <div id="bar">
                            </div>
                            <br/>
                            <p id="date">Posted: <%= posts[i].updated %> </p>

                            <br/>

                            
                             <% for (var j= 0 ; j < posts[i].images.length ; j ++) { %>
                                    <% if (posts[i].images[j] == null || posts[i].images[j] == undefined) { %>
                                        <% continue } else { %>
                                            <% var url = 'http://res.cloudinary.com/slacking-food-blog/image/upload/' +   posts[i].images[j] + '.jpg' %> 
                                            <img src=<%= url %>></img>
                                            <br/>
                                            <% } %>
                                            <% } %>

                            <br/>

                            <p id="contents"> <%- posts[i].content %> </p>

                            <div id="bar2">
                            </div>
                    </div>

                            
                            <br/>
                            <br/>
                    <% } %>
                
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <a href="http://slackingfoodblog.herokuapp.com/what_i_eat_recipes/">PREVIOUS</a>
                    </div>
                    <% if(posts.length == 8) { %>
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <a href="http://slackingfoodblog.herokuapp.com/what_i_eat_recipes/2">NEXT</a>
                    </div>
                    <% } %>
                </div>
                </div>

         

        <% include ./footer.ejs %>
       
        </div>

       
        
    
    </body>


</html>
