<!DOCTYPE Html>
<html lang="en">
    <head>
        <title>Slacking Food Blog</title>
        <meta name="viewport" content="width=device-width">
        <% include ../public/js/scripts.html %>
         <script>

            $(document).ready(function(){

            
               $('nav').hide();
               $('nav').fadeIn(2000);

              
                   
            });

        </script>

    </head>

    <body >

        <div id="wrapper" class="container-fluid">
       

       
        <% include ./navigation.ejs %>

         <div id="page_title" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <h1>My Favorite Stuff</h1>
                </div>

            <div id="favorite" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div id="favorite_contents" >
                    
                    <% for(var i = 0 ; i < posts.length ; i++) { %>
                       
                            <h2 id="post_title"> <%= posts[i].title %> </h2>
                            <div id="bar">
                            </div>
                            <br/>
                           
                            <% var date_splice = new Array(33) %>
                            <% for (var x = 0 ; x < 33 ; x++) { %>
                            <% date_splice[x] = posts[i].updated[x] %>
                            <% } %>
                            <p id="date">Posted: <%= date_splice %> </p>
                            
                        

                            <br/>

                            <% for (var j= 0 ; j < posts[i].images.length ; j ++) { %>
                                    <% if (posts[i].images[j] == null || posts[i].images[j] == undefined) { %>
                                        <% continue } else { %>
                                            <% var url = 'http://res.cloudinary.com/slacking-food-blog/image/upload/' +   posts[i].images[j] + '.jpg' %> 
                                            <img src=<%= url %>></img>
                                            <br/>
                                            <% } %>
                                            <% } %>

                            <br/>
                           

                            <p id="contents"> <%- posts[i].content %> </p>
                            
                        

                    
                            <div id="bar2">
                            </div>
                            <br/>
                            <br/>
                    <% } %>
                    
                    <% if(posts.length == 8) { %>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <a href="http://slackingfoodblog.herokuapp.com/my_favorite_stuff/1">NEXT</a>
                        </div>
                    <% } %>
                
                </div>
                </div>



        <% include ./footer.ejs %>
       
        </div>

       
        
    
    </body>


</html>
