<!DOCTYPE Html>
<html lang="en">
    <head>
        <title>Slacking Food Blog</title>
         <meta name="viewport" content="width=device-width">
        <% include ../public/js/scripts.html %>


        <script>

            $(document).ready(function(){

               

               $('nav').hide();
               $('nav').fadeIn(2000);

               
                    
          
                   
            });

        </script>

        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
<script>
  (adsbygoogle = window.adsbygoogle || []).push({
    google_ad_client: "ca-pub-6112916663924754",
    enable_page_level_ads: true
  });
</script>

    </head>

    <body >

        <div id="wrapper" class="container-fluid">
        <div class="row">


            <div class= "col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <br/>
                <br/>
                <a id="logo" href="/"><img class="img-responsive" src="img/logo.png" alt="Logo"/></a>
                 
            </div>

           

        <% include ./navigation.ejs %>
        
       <div id="newest_post" style="color: white">
           <p id="whats_new" style="color:black">What's NEW!</p>
           <% if(newest_recipe_title) { %>
           <p id="newest_head" style="color:black">What 'I' Eat! Recipes for 'You'!</p>
            <p id="newest_title" style="color:black"><a href="/what_i_eat_recipes/#"<%= newest_recipe_id %>><%= newest_recipe_title %></a></p>
            <% } %>

            <% if(newest_journey_title) { %>
            <p id="newest_head" style="color:black">My Food Journey</p>
            <p id="newest_title" style="color:black"><a href="/my_food_journey/#"<%= newest_journey_id %>><%= newest_journey_title %></a></p>

            <% } %>

            <% if(newest_favorite_title) { %>
            <p id="newest_head" style="color:black">My Favorite Stuff</p>
            <p id="newest_title" style="color:black"><a href="/my_favorite_stuff/#"<%= newest_favorite_id %>><%= newest_favorite_title %></a></p>

            <% } if (!newest_recipe_title && !newest_journey_title && !newest_favorite_title){ %>
                <p id="content_notify" style="color:black"> There's no new contents! </p>
                <% } %>

       </div>

        <% include ./footer.ejs %>


            </div>
        </div>
    
    </body>


</html>
